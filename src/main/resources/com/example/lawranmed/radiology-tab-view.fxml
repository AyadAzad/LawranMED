<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="450.0" prefWidth="740.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lawranmed.RadiologyTabController">
    <children>
        <HBox layoutX="10.0" layoutY="10.0" spacing="10.0">
            <children>
                <DatePicker fx:id="dateFilterPicker" promptText="Filter by date" />
                <ComboBox fx:id="statusFilterComboBox" prefWidth="150.0" promptText="Filter by status" />
                <Button onAction="#handleFilter" text="Filter" />
                <Button onAction="#handleClearFilters" text="Clear" />
            </children>
        </HBox>
        <TableView fx:id="radiologyTable" layoutX="10.0" layoutY="60.0" prefHeight="320.0" prefWidth="720.0">
            <columns>
                <TableColumn fx:id="requestIdColumn" prefWidth="75.0" text="Request ID" />
                <TableColumn fx:id="patientNameColumn" prefWidth="150.0" text="Patient" />
                <TableColumn fx:id="doctorNameColumn" prefWidth="150.0" text="Requesting Doctor" />
                <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                <TableColumn fx:id="requestDateColumn" prefWidth="120.0" text="Request Date" />
            </columns>
        </TableView>
        <HBox layoutX="10.0" layoutY="390.0" spacing="10.0">
            <children>
                <Button onAction="#handleNewRequest" prefWidth="120.0" text="New Request" />
                <Button onAction="#handleEnterReport" prefWidth="120.0" text="Enter Report" />
                <Button onAction="#handleViewReport" prefWidth="120.0" text="View Report" />
            </children>
        </HBox>
    </children>
</AnchorPane>
