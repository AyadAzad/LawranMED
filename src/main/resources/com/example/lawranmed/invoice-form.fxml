<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="450.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lawranmed.InvoiceFormController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Invoice Details" textFill="#2c3e50">
            <font>
                <Font name="Arial Bold" size="28.0" />
            </font>
        </Label>
        <GridPane hgap="15.0" layoutX="30.0" layoutY="80.0" prefWidth="390.0" vgap="15.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Invoice ID" GridPane.rowIndex="0" />
            <TextField fx:id="invoiceIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Patient" GridPane.rowIndex="1" />
            <ComboBox fx:id="patientComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Appointment" GridPane.rowIndex="2" />
            <ComboBox fx:id="appointmentComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Amount" GridPane.rowIndex="3" />
            <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Status" GridPane.rowIndex="4" />
            <ComboBox fx:id="statusComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Billing Date" GridPane.rowIndex="5" />
            <DatePicker fx:id="billingDatePicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        </GridPane>
        <HBox alignment="CENTER_RIGHT" layoutX="230.0" layoutY="340.0" spacing="10.0">
            <children>
                <Button onAction="#handleSave" prefWidth="80.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Save" />
                <Button onAction="#handleCancel" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel" />
            </children>
        </HBox>
    </children>
</AnchorPane>
