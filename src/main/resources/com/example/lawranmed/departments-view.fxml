<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="450.0" prefWidth="740.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lawranmed.controller.DepartmentsController">
    <children>
        <TableView fx:id="departmentTable" layoutX="10.0" layoutY="10.0" prefHeight="370.0" prefWidth="720.0">
            <columns>
                <TableColumn fx:id="departmentIdColumn" prefWidth="100.0" text="Department ID" />
                <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                <TableColumn fx:id="descriptionColumn" prefWidth="415.0" text="Description" />
            </columns>
        </TableView>
        <HBox layoutX="10.0" layoutY="390.0" spacing="10.0">
            <children>
                <Button onAction="#handleAddDepartment" prefWidth="100.0" text="Add" />
                <Button onAction="#handleEditDepartment" prefWidth="100.0" text="Edit" />
                <Button onAction="#handleDeleteDepartment" prefWidth="100.0" text="Delete" />
            </children>
        </HBox>
    </children>
</AnchorPane>
