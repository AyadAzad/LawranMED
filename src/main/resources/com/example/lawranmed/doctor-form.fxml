<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lawranmed.controller.DoctorFormController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Doctor Information">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>
        <GridPane hgap="10.0" layoutX="20.0" layoutY="70.0" prefWidth="360.0" vgap="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="First Name" GridPane.rowIndex="0" />
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Last Name" GridPane.rowIndex="1" />
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Specialization" GridPane.rowIndex="2" />
            <TextField fx:id="specializationField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Contact Number" GridPane.rowIndex="3" />
            <TextField fx:id="contactNumberField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Email" GridPane.rowIndex="4" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Address" GridPane.rowIndex="5" />
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Hire Date" GridPane.rowIndex="6" />
            <DatePicker fx:id="hireDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        </GridPane>
        <HBox layoutX="200.0" layoutY="350.0" spacing="10.0">
            <children>
                <Button onAction="#handleSave" text="Save" />
                <Button onAction="#handleCancel" text="Cancel" />
            </children>
        </HBox>
    </children>
</AnchorPane>
