<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="450.0" prefWidth="740.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lawranmed.controller.StaffController">
    <children>
        <HBox layoutX="10.0" layoutY="10.0" spacing="10.0">
            <children>
                <TextField fx:id="searchField" prefWidth="300.0" promptText="Search by name or role" />
            </children>
        </HBox>
        <TableView fx:id="staffTable" layoutX="10.0" layoutY="60.0" prefHeight="320.0" prefWidth="720.0">
            <columns>
                <TableColumn fx:id="staffIdColumn" prefWidth="75.0" text="Staff ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="120.0" text="First Name" />
                <TableColumn fx:id="lastNameColumn" prefWidth="120.0" text="Last Name" />
                <TableColumn fx:id="roleColumn" prefWidth="150.0" text="Role" />
                <TableColumn fx:id="departmentColumn" prefWidth="150.0" text="Department" />
            </columns>
        </TableView>
        <HBox layoutX="10.0" layoutY="390.0" spacing="10.0">
            <children>
                <Button onAction="#handleAddStaff" prefWidth="100.0" text="Add" />
                <Button onAction="#handleEditStaff" prefWidth="100.0" text="Edit" />
                <Button onAction="#handleDeleteStaff" prefWidth="100.0" text="Delete" />
            </children>
        </HBox>
    </children>
</AnchorPane>
