<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lawranmed.StaffFormController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Staff Details" textFill="#2c3e50">
            <font>
                <Font name="Arial Bold" size="28.0" />
            </font>
        </Label>
        <GridPane hgap="15.0" layoutX="30.0" layoutY="80.0" prefWidth="340.0" vgap="15.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="First Name" GridPane.rowIndex="0" />
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Last Name" GridPane.rowIndex="1" />
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Role" GridPane.rowIndex="2" />
            <TextField fx:id="roleField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Department" GridPane.rowIndex="3" />
            <ComboBox fx:id="departmentComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Contact Number" GridPane.rowIndex="4" />
            <TextField fx:id="contactNumberField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Email" GridPane.rowIndex="5" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Hire Date" GridPane.rowIndex="6" />
            <DatePicker fx:id="hireDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        </GridPane>
        <HBox alignment="CENTER_RIGHT" layoutX="180.0" layoutY="400.0" spacing="10.0">
            <children>
                <Button onAction="#handleSave" prefWidth="80.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Save" />
                <Button onAction="#handleCancel" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel" />
            </children>
        </HBox>
    </children>
</AnchorPane>
