<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lawranmed.controller.LabResultsFormController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Enter Lab Results" textFill="#2c3e50">
            <font>
                <Font name="Arial Bold" size="28.0" />
            </font>
        </Label>
        <Label fx:id="patientAndTestLabel" layoutX="30.0" layoutY="80.0" text="Patient: John Doe - Test: Blood Test">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Label>
        <TextArea fx:id="resultsArea" layoutX="30.0" layoutY="120.0" prefHeight="200.0" prefWidth="440.0" wrapText="true" />
        <HBox alignment="CENTER_RIGHT" layoutX="280.0" layoutY="340.0" spacing="10.0">
            <children>
                <Button onAction="#handleSave" prefWidth="80.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Save" />
                <Button onAction="#handleCancel" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel" />
            </children>
        </HBox>
    </children>
</AnchorPane>
