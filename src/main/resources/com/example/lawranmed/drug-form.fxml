<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lawranmed.DrugFormController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Drug Details" textFill="#2c3e50">
            <font>
                <Font name="Arial Bold" size="28.0" />
            </font>
        </Label>
        <GridPane hgap="15.0" layoutX="30.0" layoutY="80.0" prefWidth="340.0" vgap="15.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Name" GridPane.rowIndex="0" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Manufacturer" GridPane.rowIndex="1" />
            <TextField fx:id="manufacturerField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Stock Quantity" GridPane.rowIndex="2" />
            <TextField fx:id="stockField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Price" GridPane.rowIndex="3" />
            <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>
        <HBox alignment="CENTER_RIGHT" layoutX="180.0" layoutY="290.0" spacing="10.0">
            <children>
                <Button onAction="#handleSave" prefWidth="80.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Save" />
                <Button onAction="#handleCancel" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel" />
            </children>
        </HBox>
    </children>
</AnchorPane>
