<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lawranmed.DashboardController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Dashboard" textFill="#2c3e50">
            <font>
                <Font name="Arial Bold" size="36.0" />
            </font>
        </Label>
        <GridPane layoutX="30.0" layoutY="80.0" prefHeight="150.0" prefWidth="740.0" hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <VBox alignment="CENTER" prefHeight="120.0" prefWidth="160.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 0);">
                    <children>
                        <Label text="Total Patients" textFill="#2c3e50">
                            <font>
                                <Font name="Arial Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label text="1,250" textFill="#3498db">
                            <font>
                                <Font name="Arial Bold" size="30.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="120.0" prefWidth="160.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 0);" GridPane.columnIndex="1">
                    <children>
                        <Label text="Total Doctors" textFill="#2c3e50">
                            <font>
                                <Font name="Arial Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label text="75" textFill="#3498db">
                            <font>
                                <Font name="Arial Bold" size="30.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="120.0" prefWidth="160.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 0);" GridPane.columnIndex="2">
                    <children>
                        <Label text="Appointments Today" textFill="#2c3e50" textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font name="Arial Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label text="45" textFill="#3498db">
                            <font>
                                <Font name="Arial Bold" size="30.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="120.0" prefWidth="160.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 0);" GridPane.columnIndex="3">
                    <children>
                        <Label text="Pending Lab Tests" textFill="#2c3e50" textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font name="Arial Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label text="12" textFill="#e74c3c">
                            <font>
                                <Font name="Arial Bold" size="30.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </GridPane>
        <BarChart fx:id="appointmentsChart" layoutX="30.0" layoutY="250.0" prefHeight="320.0" prefWidth="740.0" title="Appointments per Month">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>
    </children>
</AnchorPane>
